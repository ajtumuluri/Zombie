<h1>Listing scenarios</h1>

<table class="table content-table">
  <thead>
    <tr>
      <th>Scenario</th>
      <th>Name</th>
      <th>Health</th>
      <th>User interaction</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @scenarios.each do |scenario| %>
      <tr>
        <td><%= scenario.name %></td>
        <td><%= scenario.scenario %></td>
        <td><%= scenario.health %></td>
        <td><%= scenario.user_interaction %></td>
        <td><%= link_to 'Show', scenario %></td>
        <td><%= link_to 'Edit', edit_scenario_path(scenario) %></td>
        <td><%= link_to 'Destroy', scenario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Scenario', new_scenario_path %>